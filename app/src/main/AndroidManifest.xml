<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Triplyst"
        tools:targetApi="31">
        <activity
            android:name=".screens.profile.ProfileViewModel"
            android:exported="false"
            android:label="@string/title_activity_profile_view_model"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".screens.calendar.CalendarViewModel"
            android:exported="false"
            android:label="@string/title_activity_calendar_view_model"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".screens.chat.ChatViewModel"
            android:exported="false"
            android:label="@string/title_activity_chat_view_model"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".screens.community.CommunityViewModel"
            android:exported="false"
            android:label="@string/title_activity_community_view_model"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".screens.home.HomeViewModel"
            android:exported="false"
            android:label="@string/title_activity_home_view_model"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".navigation.AppNavHost"
            android:exported="false"
            android:label="@string/title_activity_app_nav_host"
            android:theme="@style/Theme.Triplyst" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Triplyst">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>